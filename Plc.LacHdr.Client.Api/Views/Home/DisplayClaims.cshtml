@using Microsoft.AspNetCore.Authentication
@model DisplayClaimsModel
<h2>Claims</h2>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>Properties</h2>

<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>

<h2>Security Tokens</h2>
<dt>Access Token (JWT): @Model.AccessToken</dt>
<dt>Refresh Token: @Model.RefreshToken</dt>